<%- include('header.ejs')%>
  <h1>
    <%= post.title %>
  </h1>
  <p>
    <%= post.body %>
  </p>
  <center>
    <a href="javascript:window.history.back();">Back</a>
  </center>
  Comments:
  <ul>
    <% for (var i=0; i < comments.length; i++) { %>
      <li>
        <%= comments[i].body %>
      </li>
      <% } %>
  </ul>
  <form action="/posts/<%= post.id %>/comments" method="POST">
    <input type="text" name="body" placeholder="comment">
    <input type="submit" value="submit">
  </form>
  <%- include('footer.ejs')%>